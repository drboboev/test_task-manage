{% extends "admin/index.html.twig" %}

{% block admin_content %}
    <hr>
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path("user-add") }}" class="btn btn-primary">Добавить пользователя</a>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Имя пользователя</th>
                    <th scope="col">Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td scope="row"></td>
                        <td>{{ user.username }}</td>
                        <td>
                            <a href="{{ path("user-view", {id: user.id}) }}" class="btn btn-sm btn-success">Просмотр</a>
                            <a href="{{ path("user-edit", {id: user.id}) }}" class="btn btn-sm btn-warning">Изменить</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}