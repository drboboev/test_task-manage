{% extends "admin/index.html.twig" %}

{% block admin_content %}
    <hr>
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path("status-add") }}" class="btn btn-primary">Добавить статус</a>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12">
            {% if statuses %}
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Название статуса</th>
                    <th scope="col">Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for status in statuses %}
                    <tr>
                        <td scope="row"></td>
                        <td>{{ status.title }}</td>
                        <td>
                            <a href="{{ path("status-edit", {id: status.id}) }}" class="btn btn-sm btn-warning">Изменить</a>
                            <a href="{{ path("status-delete", {id: status.id}) }}" class="btn btn-sm btn-danger">Удалить</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% else %}
                Нет задач
            {% endif %}
        </div>
    </div>

{% endblock %}